                        android:background="@drawable/bg_previus"
                        android:drawableLeft="@drawable/ic_left"
                        android:text="Anterior"
                        android:textColor="@color/White" />


                </RelativeLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.cardview.widget.CardView>


