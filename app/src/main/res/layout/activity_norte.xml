<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.ActivityNorte">


    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/progress"
        android:layout_width="395dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="6dp"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="#009688"
        app:spb_currentStateNumber="one"
        app:spb_maxStateNumber="four"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="#009688"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee" />




<!--STEP1-->
    <androidx.cardview.widget.CardView
        android:id="@+id/Step1_norte"
        android:layout_marginTop="115dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:visibility="visible"
        app:contentPadding="12dp">


        <androidx.core.widget.NestedScrollView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName_norte"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Fecha">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDate_norte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="date"
                    android:maxLines="1"
                    android:onClick="onClickDate" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Muestra" />

            <Spinner
                android:id="@+id/spinnerMuestra_norte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Hora">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTime_norte"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="time" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="ID">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etID_norte"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Codigo Laboratorio">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCodigo_norte"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>





        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <!--STEP2-->

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/Step2_norte"
        android:layout_marginTop="122dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="12dp">


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Muestra" />

                <Spinner
                    android:id="@+id/spinnerMuestra2_norte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="Hora">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTime2_norte"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="time" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="ID">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etID2_norte"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="Codigo Laboratorio">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodigo2_norte"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>





            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <!--STEP3-->

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/Step3_norte"
        android:layout_marginTop="122dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="12dp">


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Muestra 3" />

                <Spinner
                    android:id="@+id/spinnerMuestra3_norte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="Hora">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTime3_norte"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:inputType="time" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="ID">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etID3_norte"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:hint="Codigo Laboratorio">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCodigo3_norte"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>





            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <!--STEP4-->

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/Step4_norte"
        android:layout_marginTop="122dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="12dp">


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textColor="#025669"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_marginTop="1dp"
                    android:text="Seleccione los checks para guardar" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#4c2882"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:text="Muestra 1" />


                <Button
                    android:id="@+id/btnConfirmedNorte"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_ok"
                    android:drawableStart="@drawable/ic_check"
                    android:padding="16dp"
                    android:textColor="@color/White"
                    android:textSize="10sp" />

                <TextView
                    android:textStyle="bold"
                    android:textColor="#4c2882"
                    android:textColorHint="#4c2882"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:hint="Muestra 2"/>

                <Button
                    android:id="@+id/btnConfirmedNorte2"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_ok"
                    android:drawableStart="@drawable/ic_check"
                    android:padding="16dp"
                    android:textColor="@color/White"
                    android:textSize="10sp" />


                <TextView
                    android:textStyle="bold"
                    android:textColorHint="#4c2882"
                    android:textColor="#4c2882"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:hint="Muestra 3"/>


                <Button
                    android:id="@+id/btnConfirmedNorte3"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_ok"
                    android:drawableStart="@drawable/ic_check"
                    android:padding="16dp"
                    android:textColor="@color/White"
                    android:textSize="10sp" />





            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


    <!--Finally-->



    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/Step5_norte"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPadding="12dp">


        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:fontFamily="sans-serif-black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="30dp"
                    android:text="Las Muestras estan registradas" />


                <Button
                    android:id="@+id/btnRegresarNorte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_regresar"
                    android:padding="16dp"
                    android:text="Regresar al Menú"
                    android:textColor="@color/White"
                    android:textSize="10sp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


    <!--Buttones-->

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="231dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="10dp"
        android:text="Siguiente" />

    <Button
        android:id="@+id/button2"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="11dp"
        android:text="Anterior" />


</RelativeLayout>